@model ListResult
@{
    ListResult result = new ListResult();
    if (Model != null)
    {
        result = Model;
    }
}
@using PlagiarismDetection.Models.Schema;
<div class="table-result" id="table-result">
    <div class="table-responsive">
        <table class="table table-striped table-bordered jambo_table">
            <thead>
                <tr>
                    <th class="text-center">Source 1</th>
                    <th class="text-center">Source 2</th>
                    <th class="text-center">Detail</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Compare compare in result.Compares)
                {
                    <tr>
                        <td class="">
                            <div class="row">
                                <div class="col-sm-12 text-center">
                                    @Html.Raw(compare.Source1.NameInfo)
                                </div>
                            </div>
                        </td>
                        <td class="">
                            <div class="row">
                                <div class="col-sm-12 text-center">
                                    @Html.Raw(compare.Source2.NameInfo)
                                </div>
                            </div>
                        </td>
                        <td class="text-center middle max-50">
                            <a id="show-detail" href="/DetectCode/CompareDetail" link-detail ="@compare.Link">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    @*<div class="col-xs-12 col-sm-9 pr-0">
        <div class="div-pagination">
            <ul class="pagination"></ul>
        </div>
    </div>*@
</div>
